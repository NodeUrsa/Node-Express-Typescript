{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "strict": true,
        "noImplicitReturns": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false
    },
    "include": [
        "app/**/*.ts",
        "spec/*.ts",
        "config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}